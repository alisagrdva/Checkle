<section class="fader_reg">
  <section class="wrapper_reg">

    <h2 class="regregreg">Забыли пароль?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field_reg">
        <!-- <%= f.label :email %><br /> -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Адрес электронный почты", :class => 'pochta' %>
      </div>

      <div class="actions_reg">
        <%= f.submit "Получить инструкцию", :class => 'voiti' %>
      </div>
    <% end %>

    <div class="reg-niz-niz">
      <%- if controller_name != 'sessions' %>
        <%= link_to "Войти", new_session_path(resource_name), :class => 'zabili' %><br />
      <% end -%>

      <div class="ili">или</div>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Зарегистрироваться", new_registration_path(resource_name), :class => 'zabili' %><br />
      <% end -%>
    </div>




  </section>
</section>
