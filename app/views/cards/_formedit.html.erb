<section class="fader">
  <section class="wrapper">
    <div class="shownew">
      <div class="zagolovokk">Редактирование
        <div class="close">
          <img src="https://i.ibb.co/N6bD89n/krest.png"/>
        </div>
      </div>

      <%= form_for(card) do |f| %>
        <% if card.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

            <ul>
            <% card.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <% if @topic %>
        <%= f.hidden_field :topic_id, value: @topic.id %>
        <% else %>
        <div class="vibortemi">
          <!-- <%= f.label :topic_id %> -->
          <%#= f.number_field :topic_id %>
          <%= select("card", "topic_id", Topic.all.collect { |t| [t.title, t.id] }, {:include_blank => 'Some text here'}) %>
        </div>

        <% end %>

        <div class="vopros">
          <%= f.label :question %>
          <%= f.text_field :question %>
        </div>

        <div class="otvet">
          <%= f.label :answer %>
          <%= f.text_field :answer %>
        </div>

        <div class="viborimage">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>

        <!-- <div class="fieldd">
          <%= f.label :memorization_level %>
          <%= f.number_field :memorization_level %>
        </div> -->

        <div class="actions">
          <%= f.submit %>
        </div>

        <%= link_to card, method: :delete, data: { confirm: 'Are you sure?' } do -%>
          <div class="deleteee">Удалить карточку</div>
        <% end %>

      <% end %>

    </div>
  </section>
</section>
