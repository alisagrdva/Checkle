            </div>

          </div>

          <% end %>

          <div class="one_side">
            <div class="side_input">
              <!-- <%= f.label :question %> -->
              <%= f.text_field :question, placeholder: "Запишите вопрос...", autocomplete: "off" %>
            </div>
          </div>

          <div class="dobavlenieimage">
            <%= f.label :image, "+ Добавить изображение" %>
